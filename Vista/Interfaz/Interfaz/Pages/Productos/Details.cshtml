@page
@model Interfaz.Pages.Productos.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-3xl font-bold m-3"> Detalles del Producto</h1>

<div class="container mx-auto">
    <div class="flex">
        <div class="w-1/3">
            <img src="@Model.Producto.Imagen" alt="Imagen de Producto" class="w-full" />
        </div>
        <div class="w-2/3 px-2 col-md-4  p-4  ">
            <h4 class="text-xl font-bold mb-4 text-center">Producto</h4>
            <dl>
                <div class="flex justify-between bg-blue-500">
                    <dt class="font-semibold">Nombre:</dt>
                    <dd>@Html.DisplayFor(model => model.Producto.Nombre)</dd>
                </div>

                <div class="flex justify-between">
                    <dt class="font-semibold">Descripción:</dt>
                    <dd>@Html.DisplayFor(model => model.Producto.Descripcion)</dd>
                </div>

                <div class="flex justify-between">
                    <dt class="font-semibold">Marca:</dt>
                    <dd>@Html.DisplayFor(model => model.Producto.Marca)</dd>
                </div>

                <div class="flex justify-between">
                    <dt class="font-semibold">Precio:</dt>
                    <dd>@Html.DisplayFor(model => model.Producto.Precio)</dd>
                </div>

                <div class="flex justify-between">
                    <dt class="font-semibold">Estado:</dt>
                    <dd>@Html.DisplayFor(model => model.Producto.Estado)</dd>
                </div>

                <div class="flex justify-between">
                    <dt class="font-semibold">Categoría:</dt>
                    <dd>@Html.DisplayFor(model => model.Producto.Id_Categoria)</dd>
                </div>

                <div class="flex justify-between">
                    <dt class="font-semibold">Proveedor:</dt>
                    <dd>@Html.DisplayFor(model => model.Producto.Id_Proveedor)</dd>
                </div>
            </dl>
        </div>
    </div>
    <div class="mt-8">
        <a href="./Edit?id=@Model.Producto.Id" class="btn btn-primary">Editar</a>
        <a href="./Index" class="btn btn-secondary">Volver al listado</a>
    </div>
</div>
