@page
@model Interfaz.Pages.Productos.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-3xl font-bold m-3"> Estas Seguro de borrar a este producto?</h2>

<div class="flex justify-center">
    <div class="w-full sm:w-3/4 md:w-1/2 lg:w-1/3 p-4 bg-slate-200 rounded-md">
        <h4 class="text-lg font-semibold mb-4">Producto</h4>
        <hr class="mb-4" />

        <div class="flex justify-center mb-4">
            <img src="@Model.Producto.Imagen" alt="Producto Imagen" class="w-18 h-18 object-cover rounded-md" />
        </div>

        <dl>
            <div class="flex justify-between mb-2">
                <dt class="font-semibold">Nombre:</dt>
                <dd>@Html.DisplayFor(model => model.Producto.Nombre)</dd>
            </div>

            <div class="flex justify-between mb-2">
                <dt class="font-semibold">Descripción:</dt>
                <dd>@Html.DisplayFor(model => model.Producto.Descripcion)</dd>
            </div>

            <div class="flex justify-between mb-2">
                <dt class="font-semibold">Marca:</dt>
                <dd>@Html.DisplayFor(model => model.Producto.Marca)</dd>
            </div>

            <div class="flex justify-between mb-2">
                <dt class="font-semibold">Precio:</dt>
                <dd>@Html.DisplayFor(model => model.Producto.Precio)</dd>
            </div>

            <div class="flex justify-between mb-2">
                <dt class="font-semibold">Estado:</dt>
                <dd>@Html.DisplayFor(model => model.Producto.Estado)</dd>
            </div>

            <div class="flex justify-between mb-2">
                <dt class="font-semibold">Categoría:</dt>
                <dd>@Html.DisplayFor(model => model.Producto.Id_Categoria)</dd>
            </div>

            <div class="flex justify-between mb-2">
                <dt class="font-semibold">Proveedor:</dt>
                <dd>@Html.DisplayFor(model => model.Producto.Id_Proveedor)</dd>
            </div>
        </dl>

        <form method="post" class="mt-4">
            <input type="hidden" asp-for="Producto.Id" />
            <input type="submit" value="Borrar" class="btn btn-danger" /> |
            <a asp-page="./Index" class="btn btn-secondary">Volver al listado</a>
        </form>
    </div>
</div>
