@page
@model Interfaz.Pages.CarritosCompra.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container mx-auto">
    <h1 class="m-4 mb-4 text-center text-3xl font-semibold text-blue-500">Crear Nuevo Producto para el Carrito de Compras</h1>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="grid-cols-2 grid gap-4">
            <div class="form-group">
                <label asp-for="CarritoCompra.Id_Usuario" class="control-label">ID de Usuario</label>
                <input asp-for="CarritoCompra.Id_Usuario" class="form-control" />
                <span asp-validation-for="CarritoCompra.Id_Usuario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CarritoCompra.Id_Producto" class="control-label">ID de Producto</label>
                <input asp-for="CarritoCompra.Id_Producto" class="form-control" />
                <span asp-validation-for="CarritoCompra.Id_Producto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CarritoCompra.NombreProducto" class="control-label">Nombre del Producto</label>
                <input asp-for="CarritoCompra.NombreProducto" class="form-control" />
                <span asp-validation-for="CarritoCompra.NombreProducto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CarritoCompra.ImagenProducto" class="control-label">URL de la Imagen del Producto</label>
                <input asp-for="CarritoCompra.ImagenProducto" class="form-control" />
                <span asp-validation-for="CarritoCompra.ImagenProducto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CarritoCompra.DescripcionProducto" class="control-label">Descripción del Producto</label>
                <input asp-for="CarritoCompra.DescripcionProducto" class="form-control" />
                <span asp-validation-for="CarritoCompra.DescripcionProducto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CarritoCompra.PrecioProducto" class="control-label">Precio del Producto</label>
                <input asp-for="CarritoCompra.PrecioProducto" class="form-control" />
                <span asp-validation-for="CarritoCompra.PrecioProducto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CarritoCompra.Cantidad" class="control-label">Cantidad</label>
                <input asp-for="CarritoCompra.Cantidad" class="form-control" />
                <span asp-validation-for="CarritoCompra.Cantidad" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary m-4 text-center text-xl">Crear</button>
        </div>
    </form>

    <a asp-page="Index" class="btn btn-secondary m-4">Volver al Listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
