@page
@model Interfaz.Pages.CarritosCompra.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container mx-auto">
    <h1 class="mb-4 text-3xl font-semibold">Deseas comprar este producto!</h1>
    
    <div>
        <h4 class="text-lg font-semibold">Detalles de Producto</h4>
        <hr class="my-2" />
        <dl class="grid-cols-2 grid gap-2">
            <dt class="font-semibold">ID de Usuario:</dt>
            <dd>@Model.CarritoCompra.Id_Usuario</dd>
            <dt class="font-semibold">ID de Producto:</dt>
            <dd>@Model.CarritoCompra.Id_Producto</dd>
            <dt class="font-semibold">Nombre del Producto:</dt>
            <dd>@Model.CarritoCompra.NombreProducto</dd>
            <dt class="font-semibold">Imagen del Producto:</dt>
            <dd>
                <img src="@Model.CarritoCompra.ImagenProducto" alt="Imagen de Producto" class="h-auto w-20">
            </dd>
            <dt class="font-semibold">Descripción del Producto:</dt>
            <dd>@Model.CarritoCompra.DescripcionProducto</dd>
            <dt class="font-semibold">Precio del Producto:</dt>
            <dd>@Model.CarritoCompra.PrecioProducto</dd>
            <dt class="font-semibold">Cantidad:</dt>
            <dd>@Model.CarritoCompra.Cantidad</dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="CarritoCompra.Id" />
            <button type="submit" class="btn btn-danger mt-6 font-bold">COMPRAR</button> 
           
        </form>
    </div>
</div>
