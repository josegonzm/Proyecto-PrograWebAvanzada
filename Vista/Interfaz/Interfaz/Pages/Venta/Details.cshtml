@page
@model Interfaz.Pages.Venta.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div class="container mx-auto">
    <h1 class="m-4 mb-4 text-center text-3xl font-semibold">Detalles de producto vendido</h1>

    <div class="mb-6">
        <h4 class="text-xl font-semibold">Informacion</h4>
        <hr class="my-2">
        <dl class="grid-cols-2 grid gap-4">
            <div class="mb-4">
                <dt class="font-semibold">ID de Usuario:</dt>
                <dd>@Html.DisplayFor(model => model.Ventas.Id_Usuario)</dd>
            </div>
            <div class="mb-4">
                <dt class="font-semibold">ID de Producto:</dt>
                <dd>@Html.DisplayFor(model => model.Ventas.Id_Producto)</dd>
            </div>
            <div class="mb-4">
                <dt class="font-semibold">Cantidad:</dt>
                <dd>@Html.DisplayFor(model => model.Ventas.Cantidad)</dd>
            </div>
        </dl>
    </div>

    <div class="flex items-center">
       
        <a asp-page="./Index" class="btn btn-secondary">Volver </a>
    </div>
</div>
