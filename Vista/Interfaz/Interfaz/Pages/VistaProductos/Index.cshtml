@page
@model Interfaz.Pages.VistaProductos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 class="m-8 rounded-2xl bg-gradient-to-r from-blue-600 via-sky-800 to-blue-300 p-4 text-center text-3xl font-bold text-white">Productos</h1>

<div class="grid-cols-1 grid gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
    @foreach (var item in Model.Producto)
    {
        <div class="animate-fade-in rounded-md bg-white p-4 shadow-md duration-300 hover:scale-105">
            <img src="@item.Imagen" alt="Imagen de @item.Nombre" class="mb-4 h-48 w-full object-contain" />
            <h2 class="mb-2 text-center text-xl font-semibold">@item.Nombre</h2>
            <p class="writing-vertical mb-4 text-center text-gray-600"> @item.Descripcion</p>
            <p class="mb-2 text-center font-bold text-gray-700">@item.Marca</p>
            <p class="mb-2 text-center text-gray-700">$@item.Precio</p>
            <p class="mb-2 text-center text-gray-700">Estado: @item.Estado</p>
            <a asp-page="./Details" asp-route-id="@item.Id" class="text-center text-blue-500 hover:underline">Comprar</a>
        </div>
    }
</div>

